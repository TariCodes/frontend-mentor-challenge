---
import Layout from "../layouts/Layout.astro";
import H1 from "../components/H1.astro";
import Main from "../components/Main.astro";
---

<Layout title="Frontend Mentor | Product preview card component">
  <Main>
    <h2 class="uppercase">Perfume</h2>
    <H1 text="Gabrielle Essence Eau De Parfum" />
    <p>
      A floral, solar and voluptuous interpretation composed by Olivier Polge,
      Perfumer-Creator for the House of CHANEL.
    </p>
    <div>
      <span class="text-4xl text-primary-200 font-bold">$149.99</span>
      <span class="">$169.99</span>
    </div> Add to Cart <button></button>
  </Main>

  <div class="attribution">
    Challenge by
    <a href="https://www.frontendmentor.io?ref=challenge" target="_blank"
      >Frontend Mentor</a
    >. Coded by <a href="#">Your Name Here</a>.
  </div>
</Layout>
